import { Test, TestingModule } from '@nestjs/testing';
import { SecretSantaService, Participant } from './secret-santa.service';
import { EmailService } from './email.service';
import { ConfigService } from '@nestjs/config';

describe('SecretSantaService', () => {
  let service: SecretSantaService;
  let emailService: EmailService;

  beforeEach(async () => {
    const module: TestingModule = await Test.createTestingModule({
      providers: [
        SecretSantaService,
        {
          provide: EmailService,
          useValue: {
            sendSecretSantaEmail: jest.fn().mockResolvedValue(undefined),
          },
        },
        {
          provide: ConfigService,
          useValue: {},
        },
      ],
    }).compile();

    service = module.get<SecretSantaService>(SecretSantaService);
    emailService = module.get<EmailService>(EmailService);
  });

  it('should be defined', () => {
    expect(service).toBeDefined();
  });

  it('should throw error if less than 2 participants', async () => {
    const participants: Participant[] = [
      { nickname: 'Test1', email: 'email1@test.com' },
    ];
    await expect(service.drawSecretSanta(participants)).rejects.toThrow();
  });

  it('should create valid assignments', async () => {
    const participants: Participant[] = [
      { nickname: 'Test1', email: 'email1@test.com' },
      { nickname: 'Test2', email: 'email2@test.com' },
      { nickname: 'Test3', email: 'email3@test.com' },
    ];
    const assignments = await service.drawSecretSanta(participants);

    expect(assignments.size).toBe(3);
    
    // Verifica que ninguÃ©m sorteou a si mesmo
    assignments.forEach((secretFriendNickname, email) => {
      const participant = participants.find(p => p.email === email);
      expect(participant?.nickname).not.toBe(secretFriendNickname);
    });
  });

  it('should send emails after drawing', async () => {
    const participants: Participant[] = [
      { nickname: 'Test1', email: 'email1@test.com' },
      { nickname: 'Test2', email: 'email2@test.com' },
    ];
    const assignments = await service.drawAndSendEmails(participants);

    expect(assignments.size).toBe(2);
    expect(emailService.sendSecretSantaEmail).toHaveBeenCalledTimes(2);
  });
});

